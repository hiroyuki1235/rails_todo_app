<h1>タスク一覧</h1>

<%= link_to '新規作成', new_task_path, class: 'link' %>
<button>完了済み</button>

<table>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><button>完了</button></td>
      <td><%= link_to '編集', edit_task_path(task), class: 'link' %></td>
      <td><button>削除</button></td>
    </tr>
  <% end %>
</table>
