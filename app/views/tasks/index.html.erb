<h1>タスク一覧</h1>

<%= link_to '新規作成', new_task_path %>
<%= link_to '完了タスク一覧', done_path %>

<table>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.name %></td>
      <td><%= link_to '完了', "/done/#{task.id}", method: :post %></td>
      <td><%= link_to '編集', edit_task_path(task) %></td>
      <td><%= link_to '削除', task, method: :delete, data: { confirm: '削除しますか？' } %></td>
    </tr>
  <% end %>
</table>
