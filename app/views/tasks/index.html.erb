<h1 class="page-title">タスク一覧</h1>

<div class="d-flex justify-content-end p-3">
  <%= link_to '新規作成', new_task_path, class: 'btn btn-primary m-1' %>
  <%= link_to '完了タスク一覧', done_path, class: 'btn btn-primary m-1' %>
</div>

<section class="tbl-sec">
  <table class="table table-sm">
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td class="tbl-btn-col"><%= link_to '完了', "/done/#{task.id}", method: :post, class: 'btn btn-outline-success btn-sm' %></td>
        <td class="tbl-btn-col"><%= link_to '編集', edit_task_path(task), class: 'btn btn-outline-warning btn-sm' %></td>
        <td class="tbl-btn-col"><%= link_to '削除', task, method: :delete, data: { confirm: '削除しますか？' }, class: 'btn btn-outline-secondary btn-sm' %></td>
      </tr>
    <% end %>
  </table>
</section>
